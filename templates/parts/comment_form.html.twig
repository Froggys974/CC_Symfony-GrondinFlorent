<form class="comment-form mt-4" data-post-id="{{ postId }}">
    <input type="hidden" name="_token" value="{{ csrf_token('comment' ~ postId) }}">
    <textarea name="content" class="w-full p-2 border rounded" placeholder="Write a comment..."></textarea>
    <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 mt-2">Post Comment</button>
</form>
