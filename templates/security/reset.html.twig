{% extends 'base.html.twig' %}
{% set show_header = false %}
{% block title %}Reset Password{% endblock %}

{% block body %}

    <div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-blue-500 to-green-500">
        <div class="bg-white p-8 rounded-lg shadow-lg w-96">
            <h2 class="text-2xl font-bold text-center mb-6">Reset Password</h2>
            <form method="post">
                {% if error %}
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="mb-4">
                    <label class="block text-sm font-medium mb-1" for="password">New Password</label>
                    <input type="password" name="password" id="password" class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" required autofocus>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium mb-1" for="confirm_password">Confirm Password</label>
                    <input type="password" name="confirm_password" id="confirm_password" class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-400" required>
                </div>
                <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600">Reset Password</button>
            </form>
        </div>
    </div>
{% endblock %}