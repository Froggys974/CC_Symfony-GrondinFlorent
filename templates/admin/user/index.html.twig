{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container mx-auto p-8">
    <h1 class="text-3xl font-bold mb-6">User Index</h1>

    <div class="mb-4">
        <a href="{{ path('app_admin_user_new') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Create New User</a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200">
            <thead>
                <tr class="bg-gray-100 border-b">
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Id</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Roles</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Password</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IsVerified</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Username</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ProfilPicture</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr class="border-t border-gray-200">
                        <td class="px-6 py-3 text-sm text-gray-900">{{ user.id }}</td>
                        <td class="px-6 py-3 text-sm text-gray-900">{{ user.email }}</td>
                        <td class="px-6 py-3 text-sm text-gray-900">{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td class="px-6 py-3 text-sm text-gray-900">{{ user.password }}</td>
                        <td class="px-6 py-3 text-sm text-gray-900">{{ user.isVerified ? 'Yes' : 'No' }}</td>
                        <td class="px-6 py-3 text-sm text-gray-900">{{ user.username }}</td>
                        <td class="px-6 py-3 text-sm text-gray-900">{{ user.profilPicture }}</td>
                        <td class="px-6 py-3 text-sm text-gray-900">
                            <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="text-blue-500 hover:underline">show</a>
                            <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="text-blue-500 hover:underline">edit</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}