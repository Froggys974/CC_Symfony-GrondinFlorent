{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="container mx-auto p-8">
    <h1 class="text-3xl font-bold mb-6">Admin Dashboard</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow">
            <h2 class="text-xl font-bold mb-2">Users</h2>
            <p>Manage users, view statistics, and more.</p>
            <a href="{{ path('app_admin_user_index') }}" class="text-blue-500 hover:underline">Go to Users</a>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
            <h2 class="text-xl font-bold mb-2">Posts</h2>
            <p>Manage posts, view statistics, and more.</p>
            <a href="{{ path('app_admin_post_index') }}" class="text-blue-500 hover:underline">Go to Posts</a>
        </div>
        <div class="bg-white p-6 rounded-lg shadow">
            <h2 class="text-xl font-bold mb-2">Comments</h2>
            <p>Manage comments, view statistics, and more.</p>
            <a href="{{ path('app_admin_comment_index') }}" class="text-blue-500 hover:underline">Go to Comments</a>
        </div>
    </div>
</div>
{% endblock %}